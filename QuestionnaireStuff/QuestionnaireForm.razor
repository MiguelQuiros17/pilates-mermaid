        public static Input CreateFromQuestionnaire(Questionnaire? questionnaire)
        {
            var result = questionnaire is null
                ? new Input()
                : new Input
                {
                    IsEnabled = questionnaire.IsEnabled,
                    IsRequired = questionnaire.IsRequired,
                    Level = questionnaire.Level,
                    QuestionGroups = questionnaire.QuestionGroups?
                            .Select((QuestionGroup g) => QuestionGroupForm.DraftInput.CreateFromQuestionGroup(g))
                            .ToList() ??
                        [],
                    UngroupedQuestions = questionnaire.Questions?
                            .Where(q => q.QuestionGroupId == null)
                            .Select((Question q) => Aloha.Admin.Web.Components.Features.Customization.Questionnaires.QuestionForm.DraftInput.CreateFromQuestion(q, draftGroupId: null, nameField: null, descriptionField: null))
                            .ToList() ??
                        new List<Aloha.Admin.Web.Components.Features.Customization.Questionnaires.QuestionForm.DraftInput>()
                };

            if (questionnaire != null)
            {
                result.NameField.PrimaryValue = questionnaire.Name ?? string.Empty;
                result.DescriptionField.PrimaryValue = questionnaire.Description ?? string.Empty;
            }

            return result;
        }

        public void Trim()
        {
            NameField.PrimaryValue = NameField.PrimaryValue?.Trim() ?? string.Empty;
            DescriptionField.PrimaryValue = DescriptionField.PrimaryValue?.Trim() ?? string.Empty;
        }
    }

    public class FormValidator : AbstractValidator<Input>
    {
        public FormValidator()
        {
            When(input => input.HasSubmitted, () =>
            {
                RuleFor(p => p.NameField.PrimaryValue).NotEmpty().WithMessage("Questionnaire name is required");

                // When no questions are present in the questionnaire...
                When(p => !p.UngroupedQuestions.Any() && !p.QuestionGroups.Any(g => g.Questions.Any()), () =>
                {
                    RuleFor(p => p.UngroupedQuestions)
                        .NotEmpty()
                        .WithMessage("Questionnaire must contain at least one question");
                });

                // When questionnaire is at product level...
                When(p => p.Level == QuestionnaireLevel.Product, () =>
                {
                    // Ensure at least one product is selected
                    RuleFor(p => p.Products)
                        .Must(products => products.Any(product => product.IsChecked))
                        .WithMessage("At least one product is required for product-level questionnaires");
                });
            });
        }
    }
