        public static Input CreateFromQuestionnaire(Questionnaire? questionnaire)
        {
            return questionnaire is null
                ? new Input()
                : new Input
                {
                    Name = questionnaire.Name,
                    Description = questionnaire.Description,
                    IsEnabled = questionnaire.IsEnabled,
                    IsRequired = questionnaire.IsRequired,
                    Level = questionnaire.Level,
                    QuestionGroups = questionnaire.QuestionGroups?
                            .Select((QuestionGroup g) => Aloha.Admin.Web.Components.Features.Customization.Questionnaires.QuestionGroupForm.DraftInput.CreateFromQuestionGroup(g))
                            .ToList() ??
                        [],
                    UngroupedQuestions = questionnaire.Questions?
                            .Where(q => q.QuestionGroupId == null)
                            .Select((Question q) => Aloha.Admin.Web.Components.Features.Customization.Questionnaires.QuestionForm.DraftInput.CreateFromQuestion(q, draftGroupId: null, nameTranslations: null, descriptionTranslations: null))
                            .ToList() ??
                        new List<Aloha.Admin.Web.Components.Features.Customization.Questionnaires.QuestionForm.DraftInput>()
                };
        }

