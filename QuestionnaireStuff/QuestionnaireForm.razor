@using Aloha.Domain.Questionnaires
@using Blazored.FluentValidation
@using FluentValidation
@using Aloha.Domain.Services.Translations
@using Aloha.Domain.Localization
@using Microsoft.EntityFrameworkCore
@using System.Linq
@using Aloha.Admin.Web.Components.Features.Customization.Questionnaires
@inject IDbContextFactory<AlohaDb> DbFactory
@inject ILanguageConfigurationService LanguageConfigService
@rendermode InteractiveServer

<EditForm class="pb-3"
          novalidate
          EditContext="editContext"
          FormName="AddQuestionnaire"
          Context="addQuestionnaireFormContext"
          OnSubmit="HandleSubmitAsync">
    <FluentValidationValidator/>

    @* Multi-language input for Title *@
    <MultiLanguageInput Label="Title"
                       FieldId="questionnaireTitle"
                       Placeholder="My Questionnaire"
                       Rows="1"
                       IsDisabled="@IsReadOnly"
                       EnglishValue="@input.Name"
                       EnglishValueChanged="@((string value) => input.Name = value)"
                       Translations="@input.NameTranslations"
                       TranslationsChanged="@((Dictionary<string, string> trans) => input.NameTranslations = trans)"
                       SelectedCultureOverride="@SelectedCulture"
                       SelectedCultureOverrideChanged="@((string culture) => { })" />
    <ValidationMessage For="() => input.Name"/>

    @* Multi-language input for Helper Text *@
    <MultiLanguageInput Label="Helper Text"
                       FieldId="questionnaireHelperText"
                       Placeholder="Please provide..."
                       Rows="3"
                       IsDisabled="@IsReadOnly"
                       EnglishValue="@input.Description"
                       EnglishValueChanged="@((string value) => input.Description = value)"
                       Translations="@input.DescriptionTranslations"
                       TranslationsChanged="@((Dictionary<string, string> trans) => input.DescriptionTranslations = trans)"
                       SelectedCultureOverride="@SelectedCulture"
                       SelectedCultureOverrideChanged="@((string culture) => { })" />
    <div class="mb-2">
        <InputCheckbox class="form-check-input"
                       disabled="@IsReadOnly"
                       @bind-Value="input.IsEnabled"
                       id="is-questionnaire-enabled"/>
        <label class="form-check-label" for="is-questionnaire-enabled">Is Enabled?</label>
    </div>
    <div class="mb-2">
        <InputCheckbox class="form-check-input"
                       disabled="@IsReadOnly"
                       @bind-Value="input.IsRequired"
                       id="is-questionnaire-required"/>
        <label class="form-check-label" for="is-questionnaire-required">Is Required?</label>
    </div>
    <fieldset class="mb-2">
        <legend class="fs-6">Application Types</legend>
        @if (!input.ApplicationTypes.Any())
        {
            <div class="mx-3 form-text">No application types available</div>
        }
        else
        {
            @foreach (var option in input.ApplicationTypes)
            {
                <div class="mx-3 mb-1">
                    <InputCheckbox @bind-Value="option.IsChecked"
                                   disabled="@IsReadOnly"
                                   class="form-check-input"
                                   id="@($"app-type-{option.Id}")"/>
                    <label class="form-check-label" for="@($"app-type-{option.Id}")">
                        @option.DisplayName
                    </label>
                </div>
            }
        }
    </fieldset>
    <div class="mb-2">
        <label class="form-label">Level*</label>
        <InputSelect @bind-Value="input.Level" disabled="@IsReadOnly" required class="form-select">
            @foreach (var level in Enum.GetValues<QuestionnaireLevel>())
            {
                <option value="@level">@level.ToString()</option>
            }
        </InputSelect>
    </div>
    @if (input.Level == QuestionnaireLevel.Product)
    {
        <fieldset class="mb-2">
            <legend class="fs-6">Share Products</legend>
            @if (input.Products.All(p => p.Type != ProductType.Share))
            {
                <div class="mx-3 form-text">No share products available</div>
            }
            else
            {
                @foreach (var option in input.Products.Where(p => p.Type == ProductType.Share))
                {
                    <div class="mx-3 mb-1">
                        <InputCheckbox @bind-Value="option.IsChecked"
                                       disabled="@IsReadOnly"
                                       class="form-check-input"
                                       id="@($"share-product-{option.Id}")"/>
                        <label class="form-check-label" for="@($"share-product-{option.Id}")">
                            @option.DisplayName
                        </label>
                    </div>
                }
            }
        </fieldset>
        <fieldset class="mb-2">
            <legend class="fs-6">Loan Products</legend>
            @if (input.Products.All(p => p.Type != ProductType.Loan))
            {
                <div class="mx-3 form-text">No loan products available</div>
            }
            else
            {
                @foreach (var option in input.Products.Where(p => p.Type == ProductType.Loan))
                {
                    <div class="mx-3 mb-1">
                        <InputCheckbox @bind-Value="option.IsChecked"
                                       disabled="@IsReadOnly"
                                       class="form-check-input"
                                       id="@($"loan-product-{option.Id}")"/>
                        <label class="form-check-label" for="@($"loan-product-{option.Id}")">
                            @option.DisplayName
                        </label>
                    </div>
                }
            }
        </fieldset>
    }

    @if (!IsReadOnly)
    {
        <hr/>

        <div class="card my-3">
            <div class="card-header">Question Groups</div>
            <div class="card-body">
                <ul class="list-unstyled mb-0 d-flex flex-column" style="gap: 8px">
                    @if (!input.QuestionGroups.Any())
                    {
                        <li>No question groups have been created</li>
                    }
                    else
                    {
                        var orderedGroups = input.QuestionGroups.OrderBy(g => g.SortOrder).ToList();
                        foreach (var group in orderedGroups)
                        {
                            var isGroupBeingEdited = groupBeingEdited?.DraftId == group.DraftId;
                            <li style=@(isGroupBeingEdited ? "border-width: 2px; border-radius: 4px; border-color: var(--bs-primary); border-style: solid; padding: 8px" : string.Empty)>
                                @if (isGroupBeingEdited)
                                {
                                    <p class="text-primary fw-bold mb-0">Currently Editing</p>
                                    <hr class="my-2"/>
                                }
                                <div class="d-flex justify-content-start" style="gap: 8px">
                                    <div>
                                        <label for=@($"sort-group-{group.DraftId}")>Sort*</label>
                                        <InputNumber id=@($"sort-group-{group.DraftId}")
                                                     min="0"
                                                     disabled="@IsReadOnly"
                                                     @bind-Value="group.SortOrder"
                                                     class="form-control"
                                                     style="width: 64px"/>
                                    </div>
                                    <div class="flex-fill">
                                        @{
                                            var groupName = GetLocalizedText(group.Name, group.NameTranslations, SelectedCulture, primaryLanguage);
                                            var groupDescription = GetLocalizedText(group.Description, group.DescriptionTranslations, SelectedCulture, primaryLanguage);
                                        }
                                        <div class="fw-bold">
                                            @if (string.IsNullOrWhiteSpace(groupName))
                                            {
                                                <span class="text-danger">(empty)</span>
                                            }
                                            else
                                            {
                                                @groupName
                                            }
                                        </div>
                                        <div>
                                            @if (string.IsNullOrWhiteSpace(groupDescription))
                                            {
                                                <span class="text-danger">(empty)</span>
                                            }
                                            else
                                            {
                                                @groupDescription
                                            }
                                        </div>
                                    </div>
                                    <div class="d-flex align-items-baseline gap-2">
                                        @if (!IsReadOnly)
                                        {
                                            <button class="btn btn-outline-secondary"
                                                    type="button"
                                                    @onclick=@(() => OpenEditQuestionGroupForm(group))>
                                                <Icon Name="IconName.PencilFill"/>
                                            </button>
                                            <button class="btn btn-outline-danger"
                                                    type="button"
                                                    @onclick=@(() => RemoveQuestionGroup(group))>
                                                <Icon Name="IconName.TrashFill"/>
                                            </button>
                                        }
                                    </div>
                                </div>
                            </li>
                        }
                    }
                </ul>
            </div>
        </div>

        <h5 class="mb-2">@(isEditingQuestionGroup ? "Edit" : "Add") Question Group</h5>

        <QuestionGroupForm
            OnSubmit="@(isEditingQuestionGroup ? EditQuestionGroup : AddQuestionGroup)"
            OnClose="@CloseEditQuestionGroupForm"
            InitialValues="groupBeingEdited"
            IsEditing="isEditingQuestionGroup"
            SelectedCulture="@SelectedCulture"
        />

        <hr/>
    }

    <div class="card my-3">
        <div class="card-header">Questions</div>
        <div class="card-body">
            <ul class="list-unstyled mb-0 d-flex flex-column" style="gap: 8px">
                @if (!input.QuestionGroups.Any() && !input.UngroupedQuestions.Any())
                {
                    <li>No questions have been added yet</li>
                }
                else
                {
                    @foreach (var question in input.UngroupedQuestions.OrderBy((Aloha.Admin.Web.Components.Features.Customization.Questionnaires.QuestionForm.DraftInput q) => q.SortOrder))
                    {
                        var isQuestionBeingEdited = question.DraftId == questionBeingEdited?.DraftId;

                        <QuestionPreview
                            IsReadOnly="IsReadOnly"
                            @bind-SortOrder="question.SortOrder"
                            IsEditing="isQuestionBeingEdited"
                            Question="question"
                            OnEdit="OpenEditQuestionForm"
                            OnRemove="RemoveQuestion"
                            SelectedCulture="@SelectedCulture"
                            PrimaryLanguage="@primaryLanguage"
                        />
                    }

                    var orderedGroups2 = input.QuestionGroups.OrderBy((QuestionGroupForm.DraftInput g) => g.SortOrder).ToList();
                    @foreach (var group in orderedGroups2)
                    {
                        var orderedQuestions = group.Questions.OrderBy((Aloha.Admin.Web.Components.Features.Customization.Questionnaires.QuestionForm.DraftInput q) => q.SortOrder).ToList();
                        var questionsInGroup = orderedQuestions;
                        <li>
                            <p class="mb-1">
                                @{
                                    var groupName2 = GetLocalizedText(group.Name, group.NameTranslations, SelectedCulture, primaryLanguage);
                                    var groupDescription2 = GetLocalizedText(group.Description, group.DescriptionTranslations, SelectedCulture, primaryLanguage);
                                }
                                <span class="fw-bold">
                                    @if (string.IsNullOrWhiteSpace(groupName2))
                                    {
                                        <span class="text-danger">(empty)</span>
                                    }
                                    else
                                    {
                                        @groupName2
                                    }
                                </span>
                                @if (!string.IsNullOrWhiteSpace(groupDescription2))
                                {
                                    <span class="fst-italic">@($" - {groupDescription2}")</span>
                                }
                                else if (group.DescriptionTranslations != null && group.DescriptionTranslations.Any())
                                {
                                    <span class="fst-italic text-danger"> - (empty)</span>
                                }
                            </p>
                            <ul class="list-unstyled d-flex flex-column mb-0" style="gap: 8px">
                                @if (!questionsInGroup.Any())
                                {
                                    <li>No questions present in this group</li>
                                }
                                else
                                {
                                    @foreach (var question in questionsInGroup)
                                    {
                                        var isQuestionBeingEdited = question.DraftId == questionBeingEdited?.DraftId;

                                        <QuestionPreview
                                            IsReadOnly="IsReadOnly"
                                            @bind-SortOrder="question.SortOrder"
                                            IsEditing="isQuestionBeingEdited"
                                            Question="question"
                                            OnEdit="OpenEditQuestionForm"
                                            OnRemove="RemoveQuestion"
                                            SelectedCulture="@SelectedCulture"
                                            PrimaryLanguage="@primaryLanguage"
                                        />
                                    }
                                }
                            </ul>
                        </li>
                    }
                }
            </ul>
        </div>
    </div>

    @if (!IsReadOnly)
    {
        <div class="d-flex mb-4">
            <div class="d-lg-block d-none"
                 style="border-width: 0; border-left-width: 1px; border-style: solid; border-color: var(--bs-border-color)">
                <div class="mx-3"></div>
            </div>
            <div class="flex-fill">
                <h5 class="mb-2">@($"{(isEditingQuestion ? "Edit" : "Add")} ")Question</h5>
                <QuestionForm
                    InitialValues="questionBeingEdited"
                    QuestionGroups="input.QuestionGroups"
                    IsEditing="isEditingQuestion"
                    OnClose="CloseEditQuestionForm"
                    OnSubmit="@(isEditingQuestion ? EditQuestion : AddQuestion)"
                    SelectedCulture="@SelectedCulture"
                    PrimaryLanguage="@primaryLanguage"
                />
            </div>
        </div>
    }

    <div class="d-flex flex-column">
        @if (input.HasSubmitted && editContext.GetValidationMessages().Any())
        {
            <Alert Color="AlertColor.Danger">
                <Icon class="me-2" Name="IconName.ExclamationTriangleFill"></Icon>
                Some information is missing and/or invalid. Please review your responses.
            </Alert>
        }
        <div class="mt-2 d-flex gap-2">
            @if (!IsReadOnly)
            {
                <Button Color="ButtonColor.Primary"
                        Type="ButtonType.Submit"
                        Disabled="@isSaving"
                        Loading="@isSaving"
                        LoadingText="Updating...">
                    @(InitialValues is null ? "Add Questionnaire" : "Save Questionnaire Edits")
                </Button>
            }
            <button class="btn btn-secondary" @onclick="OnCancel.InvokeAsync" type="button">Cancel</button>
            <ConfirmationMessage @ref="messageRef" Title="Questionnaire" RouteAfterSaved="/customization/questionnaires" />
        </div>
    </div>
</EditForm>

@code {
    private ConfirmationMessage? messageRef;
    private bool isSaving = false;
    private bool isEditingQuestionGroup;
    private QuestionGroupForm.DraftInput? groupBeingEdited;

    private bool isEditingQuestion;
    private Aloha.Admin.Web.Components.Features.Customization.Questionnaires.QuestionForm.DraftInput? questionBeingEdited;

    private Input input = default!;
    private EditContext editContext = default!;
    private ValidationMessageStore messageStore = default!;

    private Questionnaire? initialValues;

    [Parameter]
    public bool IsReadOnly { get; set; }

    [Parameter]
    public Questionnaire? InitialValues { get; set; }

    [Parameter]
    public string SelectedCulture { get; set; } = "en-US";

    private string primaryLanguage = "en-US";

    [Parameter, EditorRequired]
    public EventCallback<Input> OnSubmit { get; set; }

    [Parameter, EditorRequired]
    public EventCallback<Input> OnCancel { get; set; }

    protected override void OnInitialized()
    {
        initialValues = InitialValues;
        input = Input.CreateFromQuestionnaire(initialValues);
        editContext = new EditContext(input);
        messageStore = new ValidationMessageStore(editContext);
        editContext.OnValidationRequested += (_, _) => messageStore.Clear();
        editContext.OnFieldChanged += (_, e) => messageStore.Clear(e.FieldIdentifier);
    }

    protected override async Task OnInitializedAsync()
    {
        await using var db = await DbFactory.CreateDbContextAsync();

        var linkedAppTypeIds = new HashSet<int>();

        if (initialValues?.QuestionnaireApplicationTypeLinks is not null)
        {
            foreach (var link in initialValues.QuestionnaireApplicationTypeLinks)
            {
                linkedAppTypeIds.Add(link.ProductApplicationTypeId);
            }
        }

        input.ApplicationTypes = await db.ProductApplicationTypes
            .Select(t => new CheckboxOption
            {
                Id = t.Id,
                DisplayName = t.ApplicationDisplayName,
                IsChecked = linkedAppTypeIds.Contains(t.Id)
            })
            .ToListAsync();

        var linkedShareProductIds = new HashSet<int>();

        if (initialValues?.QuestionnaireShareProductLinks is not null)
        {
            foreach (var link in initialValues.QuestionnaireShareProductLinks)
            {
                linkedShareProductIds.Add(link.ShareProductId);
            }
        }

        var shareProducts = await db.ShareProducts
            .Select(p => new ProductCheckboxOption
            {
                Id = p.Id,
                DisplayName = p.ProductDisplayName,
                IsChecked = linkedShareProductIds.Contains(p.Id),
                Type = ProductType.Share
            })
            .ToListAsync();

        var linkedLoanProductIds = new HashSet<int>();

        if (initialValues?.QuestionnaireLoanProductLinks is not null)
        {
            foreach (var link in initialValues.QuestionnaireLoanProductLinks)
            {
                linkedLoanProductIds.Add(link.LoanProductId);
            }
        }

        var loanProducts = await db.LoanProducts
            .Select(p => new ProductCheckboxOption
            {
                Id = p.Id,
                DisplayName = p.ProductDisplayName,
                IsChecked = linkedLoanProductIds.Contains(p.Id),
                Type = ProductType.Loan
            })
            .ToListAsync();

        input.Products = shareProducts.Concat(loanProducts).ToList();

        // Load translations for all nested entities
        if (initialValues != null)
        {
            await LoadAllTranslations(initialValues);
        }
    }

    private async Task LoadAllTranslations(Questionnaire questionnaire)
    {
        Console.WriteLine($"[LoadAllTranslations] START - Questionnaire ID: {questionnaire.Id}");
        await using var db = await DbFactory.CreateDbContextAsync();
        primaryLanguage = await LanguageConfigService.GetPrimaryLanguageAsync();
        var enabledLanguages = await LanguageConfigService.GetEnabledLanguagesAsync();
        Console.WriteLine($"[LoadAllTranslations] PrimaryLanguage: {primaryLanguage}, EnabledLanguages: {string.Join(", ", enabledLanguages)}");

        // Load translations for questionnaire Name and Description
        if (questionnaire.Id > 0)
        {
            var resourceKey = $"Questionnaire.{questionnaire.Id}";
            
            // Load all translations from database
            var nameTranslations = await db.Set<LocalizationString>()
                .Where(s => s.ResourceKey == resourceKey && s.Key == "Name")
                .Include(s => s.LocalizationCulture)
                .ToListAsync();
            
            var descriptionTranslations = await db.Set<LocalizationString>()
                .Where(s => s.ResourceKey == resourceKey && s.Key == "Description")
                .Include(s => s.LocalizationCulture)
                .ToListAsync();
            
            // Handle Name
            if (primaryLanguage.StartsWith("en"))
            {
                // Primary language is English, so entity property contains the primary language value
                input.Name = questionnaire.Name ?? "";
                // Load all non-primary translations
                input.NameTranslations = await LoadTranslationsForEntity(db, resourceKey, "Name", primaryLanguage, enabledLanguages);
            }
            else
            {
                // Primary language is Spanish, so we need to load Spanish from database
                var spanishName = nameTranslations
                    .FirstOrDefault(t => t.LocalizationCulture?.Culture == primaryLanguage);
                input.Name = spanishName?.DefaultText ?? questionnaire.Name ?? "";
                
                // Load all non-primary translations (this excludes primary language, which is Spanish)
                input.NameTranslations = await LoadTranslationsForEntity(db, resourceKey, "Name", primaryLanguage, enabledLanguages);
                
                // Put English value (from entity property) into Translations dictionary so it can be displayed when English is selected
                // Entity properties always contain English values, regardless of primary language setting
                var englishCulture = enabledLanguages.FirstOrDefault(l => l.StartsWith("en"));
                if (englishCulture != null)
                {
                    // Always set English from entity property, even if it exists in database (entity property is source of truth for English)
                    input.NameTranslations[englishCulture] = questionnaire.Name ?? "";
                }
            }
            
            // Handle Description
            if (primaryLanguage.StartsWith("en"))
            {
                // Primary language is English, so entity property contains the primary language value
                input.Description = questionnaire.Description ?? "";
                // Load all non-primary translations
                input.DescriptionTranslations = await LoadTranslationsForEntity(db, resourceKey, "Description", primaryLanguage, enabledLanguages);
            }
            else
            {
                // Primary language is Spanish, so we need to load Spanish from database
                var spanishDescription = descriptionTranslations
                    .FirstOrDefault(t => t.LocalizationCulture?.Culture == primaryLanguage);
                input.Description = spanishDescription?.DefaultText ?? questionnaire.Description ?? "";
                
                // Load all non-primary translations (this excludes primary language, which is Spanish)
                input.DescriptionTranslations = await LoadTranslationsForEntity(db, resourceKey, "Description", primaryLanguage, enabledLanguages);
                
                // Put English value (from entity property) into Translations dictionary so it can be displayed when English is selected
                // Entity properties always contain English values, regardless of primary language setting
                var englishCulture = enabledLanguages.FirstOrDefault(l => l.StartsWith("en"));
                if (englishCulture != null)
                {
                    // Always set English from entity property, even if it exists in database (entity property is source of truth for English)
                    input.DescriptionTranslations[englishCulture] = questionnaire.Description ?? "";
                }
            }
        }

        // Load translations for question groups
        if (questionnaire.QuestionGroups != null)
        {
            foreach (var group in questionnaire.QuestionGroups)
            {
                var groupDraft = input.QuestionGroups.FirstOrDefault(g => g.Name == group.Name && g.SortOrder == group.SortOrder);
                if (groupDraft != null)
                {
                    // Load all translations from database
                    var groupNameTranslations = await db.Set<LocalizationString>()
                        .Where(s => s.ResourceKey == $"QuestionGroup.{group.Id}" && s.Key == "Name")
                        .Include(s => s.LocalizationCulture)
                        .ToListAsync();
                    
                    var groupDescriptionTranslations = await db.Set<LocalizationString>()
                        .Where(s => s.ResourceKey == $"QuestionGroup.{group.Id}" && s.Key == "Description")
                        .Include(s => s.LocalizationCulture)
                        .ToListAsync();
                    
                    // Handle Name
                    if (primaryLanguage.StartsWith("en"))
                    {
                        // Primary language is English, so entity property contains the primary language value
                        groupDraft.Name = group.Name ?? "";
                        // Load all non-primary translations
                        groupDraft.NameTranslations = await LoadTranslationsForEntity(db, $"QuestionGroup.{group.Id}", "Name", primaryLanguage, enabledLanguages);
                    }
                    else
                    {
                        // Primary language is Spanish, so we need to load Spanish from database
                        var spanishName = groupNameTranslations
                            .FirstOrDefault(t => t.LocalizationCulture?.Culture == primaryLanguage);
                        // Don't fall back to group.Name (English) - use empty string if Spanish not found
                        groupDraft.Name = spanishName?.DefaultText ?? "";
                        
                        // Load all non-primary translations (this excludes primary language, which is Spanish)
                        groupDraft.NameTranslations = await LoadTranslationsForEntity(db, $"QuestionGroup.{group.Id}", "Name", primaryLanguage, enabledLanguages);
                        
                        // Put English value into Translations dictionary - use database value if available, otherwise use entity property as fallback
                        var englishCulture = enabledLanguages.FirstOrDefault(l => l.StartsWith("en"));
                        if (englishCulture != null)
                        {
                            // Check if English translation exists in database, otherwise use entity property
                            var englishName = groupNameTranslations
                                .FirstOrDefault(t => t.LocalizationCulture?.Culture == englishCulture);
                            groupDraft.NameTranslations[englishCulture] = englishName?.DefaultText ?? group.Name ?? "";
                        }
                    }
                    
                    // Handle Description
                    if (primaryLanguage.StartsWith("en"))
                    {
                        // Primary language is English, so entity property contains the primary language value
                        groupDraft.Description = group.Description;
                        // Load all non-primary translations
                        groupDraft.DescriptionTranslations = await LoadTranslationsForEntity(db, $"QuestionGroup.{group.Id}", "Description", primaryLanguage, enabledLanguages);
                    }
                    else
                    {
                        // Primary language is Spanish, so we need to load Spanish from database
                        var spanishDescription = groupDescriptionTranslations
                            .FirstOrDefault(t => t.LocalizationCulture?.Culture == primaryLanguage);
                        // Don't fall back to group.Description (English) - use null if Spanish not found
                        groupDraft.Description = spanishDescription?.DefaultText;
                        
                        // Load all non-primary translations (this excludes primary language, which is Spanish)
                        groupDraft.DescriptionTranslations = await LoadTranslationsForEntity(db, $"QuestionGroup.{group.Id}", "Description", primaryLanguage, enabledLanguages);
                        
                        // Put English value into Translations dictionary - use database value if available, otherwise use entity property as fallback
                        var englishCulture = enabledLanguages.FirstOrDefault(l => l.StartsWith("en"));
                        if (englishCulture != null)
                        {
                            // Check if English translation exists in database, otherwise use entity property
                            var englishDescription = groupDescriptionTranslations
                                .FirstOrDefault(t => t.LocalizationCulture?.Culture == englishCulture);
                            groupDraft.DescriptionTranslations[englishCulture] = englishDescription?.DefaultText ?? group.Description ?? "";
                        }
                    }

                    // Load translations for questions in group
                    if (group.Questions != null)
                    {
                        foreach (var question in group.Questions)
                        {
                            var questionDraft = groupDraft.Questions.FirstOrDefault(q => q.Name == question.Name && q.SortOrder == question.SortOrder);
                            if (questionDraft != null)
                            {
                                // Load all translations from database
                                var questionNameTranslations = await db.Set<LocalizationString>()
                                    .Where(s => s.ResourceKey == $"Question.{question.Id}" && s.Key == "Name")
                                    .Include(s => s.LocalizationCulture)
                                    .ToListAsync();
                                
                                var questionDescriptionTranslations = await db.Set<LocalizationString>()
                                    .Where(s => s.ResourceKey == $"Question.{question.Id}" && s.Key == "Description")
                                    .Include(s => s.LocalizationCulture)
                                    .ToListAsync();
                                
                                // Handle Name
                                if (primaryLanguage.StartsWith("en"))
                                {
                                    Console.WriteLine($"[LoadAllTranslations] Loading question {question.Id} - Primary language is English");
                                    Console.WriteLine($"[LoadAllTranslations] question.Name (entity property, English): '{question.Name}'");
                                    // Primary language is English, so entity property contains the primary language value
                                    questionDraft.Name = question.Name ?? "";
                                    // Load all non-primary translations
                                    questionDraft.NameTranslations = await LoadTranslationsForEntity(db, $"Question.{question.Id}", "Name", primaryLanguage, enabledLanguages);
                                    var nameTranslationsArray1 = questionDraft.NameTranslations.Select(kvp => string.Format("{0}='{1}'", kvp.Key, kvp.Value)).ToArray();
                                    Console.WriteLine($"[LoadAllTranslations] NameTranslations after LoadTranslationsForEntity: {string.Join(", ", (IEnumerable<string>)nameTranslationsArray1)}");
                                    var questionDraftName1 = questionDraft.Name ?? "";
                                    Console.WriteLine($"[LoadAllTranslations] questionDraft.Name set to: '{questionDraftName1}'");
                                }
                                else
                                {
                                    // Primary language is Spanish, so we need to load Spanish from database
                                    Console.WriteLine($"[LoadAllTranslations] Loading question {question.Id} - Primary language is Spanish");
                                    Console.WriteLine($"[LoadAllTranslations] question.Name (entity property, English): '{question.Name}'");
                                    var spanishName = questionNameTranslations
                                        .FirstOrDefault(t => t.LocalizationCulture?.Culture == primaryLanguage);
                                    Console.WriteLine($"[LoadAllTranslations] Spanish Name from database: '{spanishName?.DefaultText ?? "NULL"}'");
                                    // Don't fall back to question.Name (English) - use empty string if Spanish not found
