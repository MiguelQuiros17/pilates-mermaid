    private static async Task<Dictionary<string, string>> LoadTranslationsForEntity(AlohaDb db, string resourceKey, string key, string primaryLanguage, List<string> enabledLanguages)
    {
        Console.WriteLine($"[LoadTranslationsForEntity] Loading translations for ResourceKey='{resourceKey}', Key='{key}', PrimaryLanguage='{primaryLanguage}'");
        var translations = await db.Set<LocalizationString>()
            .Where(s => s.ResourceKey == resourceKey && s.Key == key)
            .Include(s => s.LocalizationCulture)
            .ToListAsync();

        Console.WriteLine($"[LoadTranslationsForEntity] Found {translations.Count} translations in database");
        var result = new Dictionary<string, string>();

        foreach (var trans in translations)
        {
            var culture = trans.LocalizationCulture?.Culture;
            Console.WriteLine($"[LoadTranslationsForEntity] Processing translation: Culture='{culture}', Text='{trans.DefaultText}', IsPrimary={culture == primaryLanguage}, IsEnabled={enabledLanguages.Contains(culture ?? "")}");
            if (string.IsNullOrWhiteSpace(culture) || culture == primaryLanguage || !enabledLanguages.Contains(culture))
            {
                Console.WriteLine($"[LoadTranslationsForEntity] Skipping translation (primary language or not enabled)");
                continue;
            }

            result[culture] = trans.DefaultText ?? "";
            Console.WriteLine($"[LoadTranslationsForEntity] Added to result: {culture}='{trans.DefaultText}'");
        }

        Console.WriteLine($"[LoadTranslationsForEntity] Returning {result.Count} translations: {string.Join(", ", result.Select(kvp => $"{kvp.Key}='{kvp.Value}'"))}");
        return result;
    }

    private string GetLocalizedText(string? primaryValue, Dictionary<string, string> translations, string selectedCulture, string primaryLang)
    {
        if (selectedCulture == primaryLang)
        {
            return primaryValue ?? "";
        }
        
        if (translations.TryGetValue(selectedCulture, out var translatedValue))
        {
            return translatedValue ?? "";
        }
        
        return primaryValue ?? "";
    }

