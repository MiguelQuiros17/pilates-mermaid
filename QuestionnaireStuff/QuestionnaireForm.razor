    public class FormValidator : AbstractValidator<Input>
    {
        public FormValidator()
        {
            When(input => input.HasSubmitted, () =>
            {
                RuleFor(p => p.Name).NotEmpty().WithMessage("Questionnaire name is required");

                // When no questions are present in the questionnaire...
                When(p => !p.UngroupedQuestions.Any() && !p.QuestionGroups.Any(g => g.Questions.Any()), () =>
                {
                    RuleFor(p => p.UngroupedQuestions)
                        .NotEmpty()
                        .WithMessage("Questionnaire must contain at least one question");
                });

                // When questionnaire is at product level...
                When(p => p.Level == QuestionnaireLevel.Product, () =>
                {
                    // Ensure at least one product is selected
                    RuleFor(p => p.Products)
                        .Must(products => products.Any(product => product.IsChecked))
                        .WithMessage("At least one product is required for product-level questionnaires");
                });
            });
        }
    }
