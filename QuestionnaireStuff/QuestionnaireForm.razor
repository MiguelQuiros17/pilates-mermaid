    private void EditQuestion(Aloha.Admin.Web.Components.Features.Customization.Questionnaires.QuestionForm.Input values)
    {
        // Question lives either inside a group, or inside the "ungrouped" question list
        var question = questionBeingEdited!.DraftGroupId == null
            ? input.UngroupedQuestions
                .First(q => q.DraftId == questionBeingEdited.DraftId)
            : input.QuestionGroups
                .First(g => g.DraftId == questionBeingEdited.DraftGroupId).Questions
                .First(q => q.DraftId == questionBeingEdited.DraftId);

        // If group changes...
        if (questionBeingEdited.DraftGroupId != values.GroupId)
        {
            // If becoming "ungrouped", add to ungrouped question list
            if (values.GroupId == null)
            {
                input.UngroupedQuestions.Add(question);
            }
            // Otherwise, add question to the new group
            else
            {
                var nextGroup = input.QuestionGroups.First(g => g.DraftId == values.GroupId);
                nextGroup.Questions.Add(question);
            }

            // If previously ungrouped, remove from the "ungrouped" list
            if (questionBeingEdited.DraftGroupId == null)
            {
                input.UngroupedQuestions.Remove(question);
            }
            // Otherwise, remove from the old group
            else
            {
                var currentGroup = input.QuestionGroups.First(g => g.DraftId == questionBeingEdited.DraftGroupId);
                currentGroup.Questions.Remove(question);
            }
        }

        question.Name = values.Name!;
        question.Description = values.Description;
        question.Type = values.Type;
        question.DraftGroupId = values.GroupId;
        question.IsRequired = values.IsRequired;
        question.NameTranslations = new Dictionary<string, string>((IDictionary<string, string>)values.NameTranslations);
        question.DescriptionTranslations = new Dictionary<string, string>((IDictionary<string, string>)values.DescriptionTranslations);

        question.MultipleChoiceOptions = values.Type != QuestionType.FreeForm
            ? values.MultipleChoiceOptions.ToList()
            : null;
    }

    private void AddQuestion(Aloha.Admin.Web.Components.Features.Customization.Questionnaires.QuestionForm.Input values)
    {
        var question = new Aloha.Admin.Web.Components.Features.Customization.Questionnaires.QuestionForm.DraftInput
        {
            DraftId = Guid.NewGuid(),
            Name = values.Name!,
            Description = string.IsNullOrWhiteSpace(values.Description) ? null : values.Description,
            DraftGroupId = values.GroupId,
            Type = values.Type,
            MultipleChoiceOptions = values.MultipleChoiceOptions.Any() ? values.MultipleChoiceOptions.ToList() : null,
            IsRequired = values.IsRequired,
            SortOrder = 0,
            NameTranslations = new Dictionary<string, string>((IDictionary<string, string>)values.NameTranslations),
            DescriptionTranslations = new Dictionary<string, string>((IDictionary<string, string>)values.DescriptionTranslations)
        };

        if (values.GroupId == null)
        {
            input.UngroupedQuestions.Add(question);
        }
        else
        {
            var group = input.QuestionGroups.First(g => g.DraftId == question.DraftGroupId);
            group.Questions.Add(question);
        }
    }

    private void RemoveQuestion(Aloha.Admin.Web.Components.Features.Customization.Questionnaires.QuestionForm.DraftInput question)
    {
        if (question.DraftGroupId == null)
        {
            input.UngroupedQuestions.Remove(question);
        }
        else
        {
            var group = input.QuestionGroups.First(g => g.DraftId == question.DraftGroupId);
            group.Questions.Remove(question);
        }

        if (questionBeingEdited?.DraftId == question.DraftId)
        {
            CloseEditQuestionForm();
        }
    }

