@using Aloha.Domain.Services.Translations
@using System.Linq
@inject ITranslationHelper TranslationHelper
@inject ILanguageConfigurationService LanguageConfigService

@if (isMultiLanguageEnabled)
{
    <div class="sticky-top bg-white border-bottom p-3 mb-3 shadow-sm" style="z-index: 1020; margin-left: -15px; margin-right: -15px; padding-left: 15px !important; padding-right: 15px !important;">
        <div class="d-flex align-items-end gap-3">
            <div class="flex-grow-1">
                <label class="form-label fw-bold mb-2">Editing Language:</label>
                <InputSelect @bind-Value="CurrentSelectedCulture" 
                            @bind-Value:after="OnCultureChanged"
                            class="form-select" 
                            style="width: 100%;"
                            id="@($"{FieldIdPrefix}-language-select")">
                    <option value="@primaryLanguage">@(languageDisplayNames.TryGetValue(primaryLanguage, out var primaryDisplayName) ? primaryDisplayName : primaryLanguage) (Primary)</option>
                    @foreach (var lang in AvailableLanguages)
                    {
                        <option value="@lang">@(languageDisplayNames.TryGetValue(lang, out var displayName) ? displayName : lang)</option>
                    }
                </InputSelect>
            </div>
            @if (TranslationConfig.AUTOTRANSLATIONAVAILABLE)
            {
                <div class="mb-0">
                    @if (CurrentSelectedCulture == primaryLanguage)
                    {
                        <button type="button" 
                                class="btn btn-primary"
                                @onclick="OnBulkTranslateAllLanguagesClick"
                                disabled="@(isTranslating || !HasEnglishText)">
                            @if (isTranslating)
                            {
                                <span class="spinner-border spinner-border-sm me-1" role="status"></span>
                            }
                            Bulk Translate All Languages
                        </button>
                    }
                    else
                    {
                        <button type="button" 
                                class="btn btn-primary"
                                @onclick="OnBulkTranslateClick"
                                disabled="@(isTranslating || !HasEnglishText)">
                            @if (isTranslating)
                            {
                                <span class="spinner-border spinner-border-sm me-1" role="status"></span>
                            }
                            Auto-Translate to fill all @(languageDisplayNames.TryGetValue(CurrentSelectedCulture, out var selectedDisplayName) ? selectedDisplayName : CurrentSelectedCulture) fields
                        </button>
                    }
                </div>
            }
        </div>
    
        @if (!string.IsNullOrWhiteSpace(TranslationError))
        {
            <div class="alert alert-danger mt-2" role="alert">
                <strong>Translation Error:</strong> @TranslationError
            </div>
        }
    </div>
}

<!-- Modal for bulk translate warning (single language) -->
@if (showBulkModal && CurrentSelectedCulture != primaryLanguage)
{
    <div class="modal fade show" style="display: block;" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Bulk Translate All Fields</h5>
                    <button type="button" class="btn-close" @onclick="CancelBulkTranslate"></button>
                </div>
                <div class="modal-body">
                    <p>This will translate all @(languageDisplayNames.TryGetValue(primaryLanguage, out var primaryName) ? primaryName : primaryLanguage) text fields to <strong>@(languageDisplayNames.TryGetValue(CurrentSelectedCulture, out var targetDisplayName) ? targetDisplayName : CurrentSelectedCulture)</strong>.</p>
                    @if (FieldsWithExistingText.Any())
                    {
                        <div class="alert alert-warning mt-2">
                            <strong>Warning:</strong> The following fields already have @(languageDisplayNames.TryGetValue(CurrentSelectedCulture, out var existingDisplayName) ? existingDisplayName : CurrentSelectedCulture) text that will be overwritten:
                            <ul class="mb-0 mt-2">
                                @foreach (var field in FieldsWithExistingText)
                                {
                                    <li><strong>@field</strong></li>
                                }
                            </ul>
                        </div>
                    }
                    <p class="mb-0"><strong>Are you sure you want to continue?</strong></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CancelBulkTranslate">Cancel</button>
                    <button type="button" class="btn btn-primary" @onclick="ConfirmBulkTranslate">
                        @if (isTranslating)
                        {
                            <span class="spinner-border spinner-border-sm me-1" role="status"></span>
                        }
                        Yes, Translate All
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}

<!-- Modal for bulk translate all languages warning -->
@if (showBulkModal && CurrentSelectedCulture == primaryLanguage)
{
    <div class="modal fade show" style="display: block;" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Bulk Translate All Languages</h5>
                    <button type="button" class="btn-close" @onclick="CancelBulkTranslate"></button>
                </div>
                <div class="modal-body">
                    <p>This will translate all @(languageDisplayNames.TryGetValue(primaryLanguage, out var primaryLangName) ? primaryLangName : primaryLanguage) text fields to <strong>all available languages</strong> (@string.Join(", ", AvailableLanguages.Select(l => languageDisplayNames.TryGetValue(l, out var langName) ? langName : l))).</p>
                    @if (FieldsWithExistingText.Any())
                    {
                        <div class="alert alert-warning mt-2">
                            <strong>Warning:</strong> Some fields already have translations that will be overwritten.
                        </div>
                    }
                    <p class="mb-0"><strong>Are you sure you want to continue?</strong></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CancelBulkTranslate">Cancel</button>
                    <button type="button" class="btn btn-primary" @onclick="ConfirmBulkTranslateAllLanguages">
                        @if (isTranslating)
                        {
                            <span class="spinner-border spinner-border-sm me-1" role="status"></span>
                        }
                        Yes, Translate All Languages
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}

@code {
    // Accept MultilingualField dictionaries - this is the primary API
    [Parameter] public Dictionary<string, MultilingualField>? Fields { get; set; }
    [Parameter] public EventCallback<Dictionary<string, MultilingualField>> FieldsChanged { get; set; }
    
    // Expose SelectedCulture so MultiLanguageInput components can use it
    [Parameter] public string? SelectedCulture { get; set; }
    [Parameter] public EventCallback<string> SelectedCultureChanged { get; set; }
    
    // Optional: Field ID prefix for unique IDs
    [Parameter] public string FieldIdPrefix { get; set; } = "multilang";
    
    // Legacy: Support old API for backward compatibility
    [Parameter] public EventCallback OnBulkTranslate { get; set; }
    [Parameter] public EventCallback OnBulkTranslateAllLanguages { get; set; }
    [Parameter] public Func<List<string>>? GetFieldsWithExistingText { get; set; }
    [Parameter] public Func<bool>? HasEnglishTextFunc { get; set; }

    private List<string> AvailableLanguages { get; set; } = new();
    private bool isTranslating = false;
    private bool showBulkModal = false;
    private List<string> FieldsWithExistingText { get; set; } = new();
    private string? TranslationError { get; set; }
    private bool isMultiLanguageEnabled = false;
    private string primaryLanguage = "en-US";
    private Dictionary<string, string> languageDisplayNames = new();
    
    // Expose SelectedCulture as a public property so MultiLanguageInput can access it
    public string CurrentCulture => SelectedCulture ?? primaryLanguage;
    
    // Property for binding to InputSelect (always non-null)
    private string CurrentSelectedCulture
    {
        get => SelectedCulture ?? primaryLanguage;
        set
        {
            SelectedCulture = value;
            OnCultureChanged();
        }
    }

    private bool HasEnglishText
    {
        get
        {
            if (Fields != null)
            {
                var enabledLanguages = AvailableLanguages.Concat(new[] { primaryLanguage }).ToList();
                return MultilingualFormHelper.HasEnglishText(enabledLanguages, Fields.Values.ToArray());
            }
            return HasEnglishTextFunc?.Invoke() ?? true;
        }
    }
    
    private async Task OnCultureChanged()
    {
        TranslationError = null;
        if (SelectedCultureChanged.HasDelegate)
        {
            await SelectedCultureChanged.InvokeAsync(SelectedCulture);
        }
        StateHasChanged();
    }
    
    private void OnBulkTranslateAllLanguagesClick()
    {
        if (Fields != null)
        {
            FieldsWithExistingText = MultilingualFormHelper.GetFieldsWithExistingText(
                CurrentSelectedCulture, primaryLanguage, Fields);
        }
        else
        {
            FieldsWithExistingText = GetFieldsWithExistingText?.Invoke() ?? new List<string>();
        }
        showBulkModal = true;
    }
    
    private async Task ConfirmBulkTranslateAllLanguages()
    {
        showBulkModal = false;
        isTranslating = true;
        TranslationError = null;
        StateHasChanged();

        try
        {
            if (Fields != null)
            {
                var enabledLanguages = AvailableLanguages.Concat(new[] { primaryLanguage }).ToList();
                var errors = await MultilingualFormHelper.BulkTranslateToAllLanguagesAsync(
                    TranslationHelper, LanguageConfigService, primaryLanguage, enabledLanguages, Fields);
                MultilingualFormHelper.HandleTranslationErrors(errors, TranslationHelper, this);
                
                if (FieldsChanged.HasDelegate)
                {
                    await FieldsChanged.InvokeAsync(Fields);
                }
            }
            else
            {
                await OnBulkTranslateAllLanguages.InvokeAsync();
            }
        }
        catch (Exception ex)
        {
            TranslationError = $"Failed to translate: {ex.Message}";
        }
        finally
        {
            isTranslating = false;
            StateHasChanged();
        }
    }

    protected override async Task OnInitializedAsync()
    {
        isMultiLanguageEnabled = await LanguageConfigService.IsMultiLanguageEnabledAsync();
        primaryLanguage = await LanguageConfigService.GetPrimaryLanguageAsync();
        var allEnabledLanguages = await LanguageConfigService.GetEnabledLanguagesAsync();
        
        // Load language display names
        languageDisplayNames = new Dictionary<string, string>();
        foreach (var lang in allEnabledLanguages)
        {
            languageDisplayNames[lang] = await LanguageConfigService.GetLanguageDisplayNameAsync(lang);
        }
        
        AvailableLanguages = allEnabledLanguages;
        // Remove primary language from available languages list (it's shown separately)
        AvailableLanguages = AvailableLanguages.Where(l => l != primaryLanguage).ToList();
        
        // Always default to primary language (unless explicitly set via parameter)
        if (string.IsNullOrWhiteSpace(SelectedCulture))
        {
            SelectedCulture = primaryLanguage;
            if (SelectedCultureChanged.HasDelegate)
            {
                await SelectedCultureChanged.InvokeAsync(SelectedCulture);
            }
        }
        
        StateHasChanged();
    }

    private void OnBulkTranslateClick()
    {
        TranslationError = null;
        if (Fields != null)
        {
            FieldsWithExistingText = MultilingualFormHelper.GetFieldsWithExistingText(
                CurrentSelectedCulture, primaryLanguage, Fields);
        }
        else
        {
            FieldsWithExistingText = GetFieldsWithExistingText?.Invoke() ?? new List<string>();
        }
        showBulkModal = true;
    }

    private async Task ConfirmBulkTranslate()
    {
        showBulkModal = false;
        isTranslating = true;
        TranslationError = null;
        StateHasChanged();

        try
        {
            if (Fields != null)
            {
                var enabledLanguages = AvailableLanguages.Concat(new[] { primaryLanguage }).ToList();
                var errors = await MultilingualFormHelper.BulkTranslateToCultureAsync(
                    TranslationHelper, CurrentSelectedCulture, primaryLanguage, enabledLanguages, Fields);
                MultilingualFormHelper.HandleTranslationErrors(errors, TranslationHelper, this);
                
                if (FieldsChanged.HasDelegate)
                {
                    await FieldsChanged.InvokeAsync(Fields);
                }
            }
            else
            {
                await OnBulkTranslate.InvokeAsync();
            }
        }
        catch (Exception ex)
        {
            TranslationError = $"Failed to translate: {ex.Message}";
        }
        finally
        {
            isTranslating = false;
            StateHasChanged();
        }
    }
    
    public void SetError(string error)
    {
        TranslationError = error;
        StateHasChanged();
    }
    
    public void ClearError()
    {
        TranslationError = null;
        StateHasChanged();
    }

    private void CancelBulkTranslate()
    {
        showBulkModal = false;
    }
}